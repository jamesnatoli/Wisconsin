// Opens a ROOT file and creates a class from it
// Can also do other operations prior to skimming here...
// like add a branch, for example

#include <iostream>

#include <TFile.h>
#include <TTree.h>

void CalculateSumOfWeights( TTree *events, TFile* f1) {
  // Add a branch to the Events Tree which has the sum of gen weights
  if (!events->FindBranch("SumOfWeights")) {
    std::cout << "Getting sum of GenWeights" << std::endl;
    Double_t sumw           = 0;
    Double_t SumOfWeights   = 0;
    
    TBranch *b_SumOfWeights = events->Branch("SumOfWeights", &SumOfWeights, "SumOfWeights/D");
    TTree   *runs           = (TTree*)(f1->Get("Runs"));
    runs->SetBranchAddress( "genEventSumw", &sumw);
    for (unsigned int i = 0; i < runs->GetEntries(); ++i) {
      runs->GetEntry(i);
      SumOfWeights += sumw;
    }
    std::cout << "SumOfWeights: " << SumOfWeights << std::endl;
    for (unsigned int i = 0; i < events->GetEntries(); ++i) {
      events->GetEntry(i);
      b_SumOfWeights->Fill();
    }
    events->Write();
  } else {
    std::cout << "Branch 'SumOfWeights' already exists" << std::endl;
  }
}

// These are commands you can also easily do in ROOT
int quickSkim( char* fname) {
  std::cout << "\n\t*** Opening file: " << fname << std::endl;
  // std::unique_ptr<TFile> f1( TFile::Open(fname));
  std::unique_ptr<TFile> f1( new TFile(fname, "update"));
  if (!f1) {
    std::cout << "Failed to open file :(" << std::endl;
    return 1;
  }
  TTree *events = (TTree*)(f1->Get("Events"));
  
  // Here you can call some functions to preskim
  // CalculateSumOfWeights( events, f1);
  
  // The name here ("skim") must match the class that the Loop() function is a member of in skimOver.C
  events->MakeClass("skim");
  return 0;
};

// Just for Fun
int justPrint( char *fname) {
  std::unique_ptr<TFile> f1( TFile::Open(fname));
  if (!f1) {
    std::cout << "Failed to open file :(" << std::endl;
    return 1;
  }
  std::cout << f1->GetName() << std::endl;
  TTree *t1 = (TTree*)f1->Get("Events");
  t1->Print();
  return 0;
};

int main( int argc, char **argv) {
  if (argc < 2)
    std::cout << "Please enter a file name..." << std::endl;
  else 
    return quickSkim( argv[1]);
}
 
